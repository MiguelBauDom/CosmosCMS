@model CreatePageViewModel
@{
    ViewData["Title"] = "__NewHomePage";
}

<div class="cwps-editor-container pt-3">
    <div class="container pt-2">
        <div class="row justify-content-center">
            <div class="card bg-dark text-light">
                <div class="card-body">
                    <h3 class="card-title">Setup Home Page</h3>
                    <p>To setup your home page, we need to know what
                        the name of your website will be.
                    </p>
                    <p>Tip: Name the website the same as your business or entity.</p>
                    <form asp-action="CreateInitialHomePage" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(h => h.ArticleNumber)
                        @Html.HiddenFor(h => h.Id)
                        @Html.HiddenFor(h => h.TemplateId)
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Email address</label>
                            <input asp-for="Title" class="form-control" placeholder="Website Name">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Setup Home Page</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

