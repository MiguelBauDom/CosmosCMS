{
        "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "customDomainName": {
            "type": "String",
            "defaultValue": "www.example.com"
        }
    },
    "variables": {
        "resourceUniqueId": "[concat(uniqueString(concat(resourceGroup().id, parameters('customDomainName'))))]",
        "secretName": "[concat(variables('frontDoorProfileName'), '/0--', variables('resourceUniqueId'), '-', variables('normalizedCustomDomainName'))]",
        "normalizedCustomDomainName": "[replace(parameters('customDomainName'), '.', '-')]",
        "frontDoorProfileName": "cosmoscms",
        "wafPolicyStaticWebId": "/subscriptions/eea20e7a-4dd0-4385-80d6-6b448e17a7da/resourceGroups/RG-ADMIN/providers/Microsoft.Network/frontdoorWebApplicationFirewallPolicies/CosmosMultiTenantEditorFrontDoorStandard"
    },
    "resources": [
        {
            "type": "Microsoft.Cdn/profiles",
            "apiVersion": "2025-04-15",
            "name": "[variables('frontDoorProfileName')]",
            "location": "Global",
            "sku": {
                "name": "Standard_AzureFrontDoor"
            },
            "kind": "frontdoor",
            "properties": {
                "originResponseTimeoutSeconds": 60
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints",
            "apiVersion": "2025-04-15",
            "name": "[concat(variables('frontDoorProfileName'), '/cosmos')]",
            "location": "Global",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('frontDoorProfileName'))]"
            ],
            "properties": {
                "enabledState": "Enabled"
            }
        },
         {
            "type": "Microsoft.Cdn/profiles/origingroups",
            "apiVersion": "2025-04-15",
            "name": "[concat(variables('frontDoorProfileName'), '/', variables('normalizedCustomDomainName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('frontDoorProfileName'))]"
            ],
            "properties": {
                "loadBalancingSettings": {
                    "sampleSize": 4,
                    "successfulSamplesRequired": 3,
                    "additionalLatencyInMilliseconds": 50
                },
                "healthProbeSettings": {
                    "probePath": "/",
                    "probeRequestType": "HEAD",
                    "probeProtocol": "Https",
                    "probeIntervalInSeconds": 100
                },
                "sessionAffinityState": "Disabled"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/secrets",
            "apiVersion": "2025-04-15",
            "name": "[variables('secretName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('frontDoorProfileName'))]"
            ],
            "properties": {
                "parameters": {
                    "type": "ManagedCertificate"
                }
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/customdomains",
            "apiVersion": "2025-04-15",
            "name": "[concat(variables('frontDoorProfileName'), '/www-windandtruth-com-2a81')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('frontDoorProfileName'))]",
                "[resourceId('Microsoft.Cdn/profiles/secrets', variables('frontDoorProfileName'), concat('0--7a73275c-3e4c-420b-94f9-7a9f1de0e68a-', variables('normalizedCustomDomainName')))]"
            ],
            "properties": {
                "hostName": "www.windandtruth.com",
                "tlsSettings": {
                    "certificateType": "ManagedCertificate",
                    "minimumTlsVersion": "TLS12",
                    "cipherSuiteSetType": "TLS12_2023",
                    "secret": {
                        "id": "[resourceId('Microsoft.Cdn/profiles/secrets', variables('frontDoorProfileName'), '0--7a73275c-3e4c-420b-94f9-7a9f1de0e68a-', variables('normalizedCustomDomainName'))]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/afdendpoints/routes",
            "apiVersion": "2025-04-15",
            "name": "[concat(variables('frontDoorProfileName'), '/cosmos/www-windandtruth-com')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles/afdendpoints', variables('frontDoorProfileName'), 'cosmos')]",
                "[resourceId('Microsoft.Cdn/profiles', variables('frontDoorProfileName'))]",
                "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), 'www-windandtruth-com-2a81')]",
                "[resourceId('Microsoft.Cdn/profiles/origingroups', variables('frontDoorProfileName'), 'static-windandtruth-com')]"
            ],
            "properties": {
                "cacheConfiguration": {
                    "compressionSettings": {
                        "isCompressionEnabled": true,
                        "contentTypesToCompress": [
                            "application/eot",
                            "application/font",
                            "application/font-sfnt",
                            "application/javascript",
                            "application/json",
                            "application/opentype",
                            "application/otf",
                            "application/pkcs7-mime",
                            "application/truetype",
                            "application/ttf",
                            "application/vnd.ms-fontobject",
                            "application/xhtml+xml",
                            "application/xml",
                            "application/xml+rss",
                            "application/x-font-opentype",
                            "application/x-font-truetype",
                            "application/x-font-ttf",
                            "application/x-httpd-cgi",
                            "application/x-javascript",
                            "application/x-mpegurl",
                            "application/x-opentype",
                            "application/x-otf",
                            "application/x-perl",
                            "application/x-ttf",
                            "font/eot",
                            "font/ttf",
                            "font/otf",
                            "font/opentype",
                            "image/svg+xml",
                            "text/css",
                            "text/csv",
                            "text/html",
                            "text/javascript",
                            "text/js",
                            "text/plain",
                            "text/richtext",
                            "text/tab-separated-values",
                            "text/xml",
                            "text/x-script",
                            "text/x-component",
                            "text/x-java-source"
                        ]
                    },
                    "queryStringCachingBehavior": "UseQueryString"
                },
                "customDomains": [
                    {
                        "id": "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), 'www-windandtruth-com-2a81')]"
                    }
                ],
                "originGroup": {
                    "id": "[resourceId('Microsoft.Cdn/profiles/origingroups', variables('frontDoorProfileName'), 'static-windandtruth-com')]"
                },
                "ruleSets": [],
                "supportedProtocols": [
                    "Http",
                    "Https"
                ],
                "patternsToMatch": [
                    "/*"
                ],
                "forwardingProtocol": "MatchRequest",
                "linkToDefaultDomain": "Disabled",
                "httpsRedirect": "Enabled",
                "enabledState": "Enabled"
            }
        },
        {
            "type": "Microsoft.Cdn/profiles/securitypolicies",
            "apiVersion": "2025-04-15",
            "name": "[concat(variables('frontDoorProfileName'), '/WAFPolicyCosmosStaticReadOnly')]",
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('frontDoorProfileName'))]",
                "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), concat('www-', variables('frontDoorProfileName'), '-net-fb58'))]",
                "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), 'www-moonrise-net-e7a0')]",
                "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), 'www-windandtruth-com-2a81')]",
                "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), 'www-christinarossphotography-com-0444')]"
            ],
            "properties": {
                "parameters": {
                    "wafPolicy": {
                        "id": "[variables('wafPolicyStaticWebId')]"
                    },
                    "type": "WebApplicationFirewall",
                    "associations": [
                        {
                            "domains": [
                                {
                                    "id": "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), concat('www-', variables('frontDoorProfileName'), '-net-fb58'))]"
                                },
                                {
                                    "id": "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), 'www-moonrise-net-e7a0')]"
                                },
                                {
                                    "id": "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), 'www-windandtruth-com-2a81')]"
                                },
                                {
                                    "id": "[resourceId('Microsoft.Cdn/profiles/customdomains', variables('frontDoorProfileName'), 'www-christinarossphotography-com-0444')]"
                                }
                            ],
                            "patternsToMatch": [
                                "/*"
                            ]
                        }
                    ]
                }
            }
        }
    ]
}