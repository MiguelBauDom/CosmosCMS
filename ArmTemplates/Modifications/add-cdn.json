{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "EditorWebAppName": {
            "type": "string"
        },
        "EndPointName": {
            "type": "string"
        },
        "IsFrontDoor": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Indicates if this CDN is Azure Front Door.  Choose false if not."
            }
        },
        "ProfileName": {
            "type": "string",
            "metadata": {
                "description": "Profile name."
            }
        },
        "ResourceGroupWhereCdnInstalled": {
            "type": "string",
            "metadata": {
                "description": "Name of resource group where CDN profile is installed."
            }
        },
        "ProfileSubscriptionId": {
            "type": "string",
            "metadata": {
                "description": "Subscription ID for CDN profile."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2021-02-01",
            "name": "[concat(parameters('EditorWebAppName'), '/appsettings')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "AzureCdnConfig__EndpointName": "[parameters('EndPointName')]",
                "AzureCdnConfig__IsFrontDoor": "[parameters('IsFrontDoor')]",
                "AzureCdnConfig__ProfileName": "[parameters('ProfileName')]",
                "AzureCdnConfig__ResourceGroupName": "[parameters('ResourceGroupWhereCdnInstalled')]",
                "AzureCdnConfig__SubscriptionId": "[parameters('ProfileSubscriptionId')]"
            }
        }
    ]
}